<div class="container d-flex flex-column  justify-content-center align-items-center pt-5">
<h1>This Post details for a User</h1>
    <li class="list-group-item d-flex justify-content-between align-items-start mt-5 item">
    <div class="ms-2 me-auto">
      <div class="fw-bold">Post # <%= @post.id%> by <%= User.find(@post.author_id).name %></div>
      <p>Title: <%= @post.title %></p>
      <p>Body: <%= @post.text  %></p>
    </div>
    <div class=" d-flex justify-content-between gap-2 align-items-start">
    <span class="badge bg-primary rounded-pill">Comments: <%= @post.comments.count%></span>
    <span class="badge bg-primary rounded-pill">Likes: <%= @post.likes.count %></span>
    <% if can? :destroy, @post%>
      <%= link_to "Delete",  user_post_path(@post.author_id, @post.id),  data: { "turbo-method": :delete, confirm: "Are you sure ?" }, class: "btn btn-outline-danger ms-3 py-0  fw-semibold fs-5 px-1" %>
    <%end%>
    </div>
  </li>
  <ul class="list-group-item item mt-2 ">
   <% @post.comments.includes(:user).each do |comment| %>
 <li class="list-group-item">username:  <%= comment.user.name %> comment:  <%= comment.text%> 
 <% if can? :destroy, comment%>
 <%= link_to "Delete",  user_post_comment_path(comment.user.id, @post.id, comment.id),  data: { "turbo-method": :delete, confirm: "Are you sure ?" }, class: "btn btn-outline-danger ms-3 py-0  fw-semibold fs-5 px-1" %>
 <%end%>
 </li> 
  <%end%>
  </ul>

  <div class='d-flex justify-content-center align-items-center'>
  <%= render 'likes/new', post: @post, like: @like %>
  <%= link_to "Go to Posts Page", user_posts_path(@post.author_id), class: "btn btn-success ms-3" %>

  </div>
</div>