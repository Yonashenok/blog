<%= form_with(model:[@user, @post], local: true, url: user_posts_path) do |f| %>
 <div class="mb-3">
    <%= f.label :title, class: "text-dark fs-3 fw-bold  form-label",  for: "exampleFormControlInput1"%><br/>
    <%= f.text_field :title, class: "px-3 form-control", id: "exampleFormControlInput1"%>
  </div>
   <div class="mb-3">
    <%= f.label :text, class: "text-dark fs-3 fw-bold  form-label", for: "exampleFormControlTextarea1" %><br/>
    <%= f.text_area  :text, class: "px-2 w-100 form-control",   id: "exampleFormControlTextarea1", rows:"3"%>
  </div>
  <p>
    <%= f.submit class: "btn btn-success  px-4" %>
  </p>
<% end %>